<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="exercise1.hibernate.dialect">org.exercise1.hibernate.dialect.MySQLDialect</property>
        <property name="exercise1.hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="exercise1.hibernate.connection.url">jdbc:mysql://localhost:8343/</property>
        <property name="exercise1.hibernate.connection.username">root</property>
        <property name="exercise1.hibernate.connection.password"/>

        <mapping class="exercise1.model.Employee"/>
        <mapping class="exercise1.model.Person"/>
        <mapping class="exercise1.model.Principal"/>
        <mapping class="exercise1.model.Janitor"/>
        <mapping class="exercise1.model.Student"/>
    </session-factory>
</hibernate-configuration>
